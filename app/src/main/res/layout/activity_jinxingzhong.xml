<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <!--商家内容-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="80dp"
                            android:background="@drawable/yuanjiao_10_baise"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="85dp"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <LinearLayout
                                    android:id="@+id/linearLayout1"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:text="服务"
                                        android:textColor="@color/blue"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <View
                                        android:id="@+id/view1"
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:background="@color/blue" />

                                </LinearLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <LinearLayout
                                    android:id="@+id/linearLayout2"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:text="检测项目"
                                        android:textColor="@color/black"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <View
                                        android:id="@+id/view2"
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:background="@color/blue"
                                        android:visibility="invisible" />

                                </LinearLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <LinearLayout
                                    android:id="@+id/linearLayout3"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:text="备注"
                                        android:textColor="@color/black"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <View
                                        android:id="@+id/view3"
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:background="@color/blue"
                                        android:visibility="invisible" />

                                </LinearLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                            </LinearLayout>

                            <!--服务布局-->
                            <LinearLayout
                                android:id="@+id/ll_fuwu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/background"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="12dp"
                                        android:text="服务队伍："
                                        android:textColor="@color/black3"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="12dp"
                                        android:text="请接车后分配！"
                                        android:textColor="@color/black"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/yuanjiao_10_baise_bottom"
                                    android:orientation="vertical">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rv_service"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:id="@+id/tv_addservice"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginLeft="13dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="13dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/yuanjiao_5_heise"
                                        android:elevation="3dp"
                                        android:gravity="center"
                                        android:onClick="onClick"
                                        android:visibility="visible"
                                        android:padding="10dp"
                                        android:text="添加服务项目"
                                        android:textColor="@color/white"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/yuanjiao_10_baise"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="12dp"
                                        android:text="其他商品"
                                        android:textColor="@color/black3"
                                        android:textSize="14sp" />

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rv_other"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:id="@+id/tv_addgoods"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginLeft="13dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="13dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/yuanjiao_5_heise"
                                        android:elevation="3dp"
                                        android:gravity="center"
                                        android:onClick="onClick"
                                        android:padding="10dp"
                                        android:visibility="visible"
                                        android:text="添加其他商品"
                                        android:textColor="@color/white"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>
                            <!--检测布局-->
                            <LinearLayout
                                android:id="@+id/ll_jiance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_jiance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/tv_addproject"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="13dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="13dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/yuanjiao_5_heise"
                                    android:elevation="3dp"
                                    android:gravity="center"
                                    android:onClick="onClick"
                                    android:padding="10dp"
                                    android:visibility="visible"
                                    android:text="添加检测项目"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                            </LinearLayout>
                            <!--备注布局-->
                            <LinearLayout
                                android:id="@+id/ll_beizhu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:background="@color/xian" />

                                <TextView
                                    android:id="@+id/tv_beizhu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:lineSpacingExtra="5dp"
                                    android:minLines="5"
                                    android:padding="13dp"
                                    android:text="备注内容" />

                            </LinearLayout>

                        </LinearLayout>
                        <!--预计完成时间-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/yuanjiao_10_baise">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="13dp"
                                android:paddingTop="18dp"
                                android:paddingBottom="18dp"
                                android:text="预计完成时间："
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_yujitime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@color/transparent"
                                android:drawableRight="@mipmap/ic_next_black"
                                android:hint="请选择预计完成时间"
                                android:inputType="phone"
                                android:onClick="onClick"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--商家信息-->
                    <com.lijiankun24.shadowlayout.ShadowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:shadowColor="#3342A8FF"
                        app:shadowDx="0dp"
                        app:shadowDy="2dp"
                        app:shadowRadius="5dp"
                        app:shadowShape="rectangle"
                        app:shadowSide="left|right|bottom">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/yuanjiao_10_baise"
                            android:gravity="center_vertical"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单编号:"
                                android:paddingLeft="13dp"
                                android:singleLine="true"
                                android:paddingRight="13dp"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="13dp"
                                android:paddingRight="13dp">

                                <TextView
                                    android:id="@+id/tv_carnum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableLeft="@mipmap/ic_car_gray"
                                    android:drawablePadding="5dp"
                                    android:text="CarNum"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableLeft="@mipmap/ic_head_gray"
                                    android:drawablePadding="5dp"
                                    android:text="NAME"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/iv_message"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:onClick="onClick"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="10dp"
                                    android:paddingRight="5dp"
                                    android:paddingBottom="10dp"
                                    android:src="@mipmap/ic_message_black1" />

                                <ImageView
                                    android:id="@+id/iv_call"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:onClick="onClick"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="10dp"
                                    android:paddingRight="13dp"
                                    android:paddingBottom="10dp"
                                    android:src="@mipmap/ic_call_black1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_jiechename"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="13dp"
                                    android:paddingRight="13dp"
                                    android:text="接车人："
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="13dp"
                                    android:paddingRight="13dp"
                                    android:singleLine="true"
                                    android:text="预约时间："
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <com.lijiankun24.shadowlayout.ShadowLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="-6dp"
                                    android:layout_weight="1"
                                    app:shadowColor="#3342A8FF"
                                    app:shadowDx="0dp"
                                    app:shadowDy="2dp"
                                    app:shadowRadius="5dp"
                                    app:shadowShape="rectangle"
                                    app:shadowSide="all">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="55dp"
                                        android:background="@drawable/yuanjiao_10_baise"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_carname"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="name"
                                            android:textColor="@color/black2"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/tv_carpailiang"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="排量："
                                            android:textColor="@color/black2"
                                            android:textSize="12sp" />

                                    </LinearLayout>

                                </com.lijiankun24.shadowlayout.ShadowLayout>

                                <com.lijiankun24.shadowlayout.ShadowLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="-5dp"
                                    android:layout_marginRight="-5dp"
                                    android:layout_weight="1"
                                    app:shadowColor="#3342A8FF"
                                    app:shadowDx="0dp"
                                    app:shadowDy="2dp"
                                    app:shadowRadius="5dp"
                                    app:shadowShape="rectangle"
                                    app:shadowSide="all">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="55dp"
                                        android:background="@drawable/yuanjiao_10_baise"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:paddingTop="10dp"
                                        android:paddingBottom="10dp">

                                        <TextView
                                            android:id="@+id/tv_carnianfen"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="年份："
                                            android:textColor="@color/black2"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/tv_carlicheng"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:singleLine="true"
                                            android:text="里程："
                                            android:textColor="@color/black2"
                                            android:textSize="12sp" />

                                    </LinearLayout>

                                </com.lijiankun24.shadowlayout.ShadowLayout>

                                <com.lijiankun24.shadowlayout.ShadowLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="-6dp"
                                    android:layout_weight="1"
                                    app:shadowColor="#3342A8FF"
                                    app:shadowDx="0dp"
                                    app:shadowDy="2dp"
                                    app:shadowRadius="5dp"
                                    app:shadowShape="rectangle"
                                    app:shadowSide="all">

                                    <LinearLayout
                                        android:id="@+id/ll_feiyong"
                                        android:layout_width="match_parent"
                                        android:layout_height="55dp"
                                        android:background="@drawable/yuanjiao_10_baise"
                                        android:gravity="center"
                                        android:onClick="onClick"
                                        android:orientation="vertical"
                                        android:paddingTop="10dp"
                                        android:paddingBottom="10dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="费用"
                                            android:textColor="@color/black2"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:id="@+id/tv_money"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="¥0"
                                            android:textColor="@color/red"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                </com.lijiankun24.shadowlayout.ShadowLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </com.lijiankun24.shadowlayout.ShadowLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yuanjiao_10_baise_top"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="13dp"
                    android:paddingTop="10dp"
                    android:paddingRight="13dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合计："
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_allmoney"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="¥0"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_fukuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/yuanjiaobiankuang_5_hongse"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:text="返回上一步"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/yuanjiao_5_lanse"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:padding="15dp"
                        android:text="全部完工"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.liaoinstan.springview.widget.SpringView>

</LinearLayout>