<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/yuanjiao_10_baise"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="13dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:text="车牌号"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_chepai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/yuanjiao_5_qianlanse"
                        android:drawableRight="@mipmap/ic_shanjiao_right_blue"
                        android:drawablePadding="5dp"
                        android:onClick="onClick"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:text="粤B"
                        android:textColor="@color/blue"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/editText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:focusable="false"
                        android:background="@color/transparent"
                        android:hint="请输入车牌号"
                        android:maxLength="6"
                        android:paddingTop="14dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="14dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_scan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:padding="14dp"
                        android:src="@mipmap/ic_scan_black" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/xian" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="13dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:text="车主姓名"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="请输入车主姓名"
                        android:paddingTop="14dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="14dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/xian" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="13dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:text="车主手机号"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/editText3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="请输入车主手机号"
                        android:inputType="phone"
                        android:paddingTop="14dp"
                        android:paddingRight="14dp"
                        android:maxLength="11"
                        android:paddingBottom="14dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/xian" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="13dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:text="品牌"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawableRight="@mipmap/ic_next_black"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:hint="请选择车辆品牌"
                        android:onClick="onClick"
                        android:paddingTop="14dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="14dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/xian" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="13dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:text="车架号"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/editText5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="请输入车架号"
                        android:paddingTop="14dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="14dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/xian" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="13dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:text="车辆里程"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/editText6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="请输入车辆里程"
                        android:inputType="numberDecimal"
                        android:paddingTop="14dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="14dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/xian" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="13dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:text="交强险"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawableRight="@mipmap/ic_next_black"
                        android:drawablePadding="10dp"
                        android:hint="请选择交强险有效日期"
                        android:onClick="onClick"
                        android:paddingTop="14dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="14dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/xian"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="13dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:text="商业保险"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawableRight="@mipmap/ic_next_black"
                        android:drawablePadding="10dp"
                        android:hint="请选择商业保险有效日期"
                        android:onClick="onClick"
                        android:paddingTop="14dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="14dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/xian"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="13dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:text="年审时间"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawableRight="@mipmap/ic_next_black"
                        android:drawablePadding="10dp"
                        android:hint="请选择年审时间"
                        android:onClick="onClick"
                        android:paddingTop="14dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="14dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/yuanjiao_10_baise"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="备注"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/editText7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="15dp"
                    android:background="#F5F5F5"
                    android:gravity="top"
                    android:hint="请输入备注"
                    android:minLines="3"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/yuanjiao_10_baise"
                android:orientation="vertical"
                android:paddingLeft="13dp"
                android:paddingTop="15dp"
                android:paddingRight="13dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:text="外观检查"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:background="@drawable/yuanjiao_5_lanse"
        android:gravity="center"
        android:onClick="onClick"
        android:padding="15dp"
        android:text="确认接车"
        android:textColor="@color/white"
        android:textSize="15sp" />


</LinearLayout>