<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/yuanjiao_10_baise_bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_listView"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/pop_listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:divider="@color/xian"
            android:dividerHeight="0.5dp"
            android:background="@color/white"
            android:scrollbars="none"/>

        <ListView
            android:id="@+id/pop_listView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:divider="@color/xian"
            android:background="#F7F7F7"
            android:dividerHeight="0.5dp"
            android:scrollbars="none"/>
    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/yuanjiao_5_lanse"
        android:gravity="center"
        android:paddingTop="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:paddingBottom="15dp"
        android:text="чбошод"
        android:textColor="@color/white" />


</LinearLayout>